<h1>List of askminders</h1>

{{#askminders}}
    <div class="localmessage{{name}} card mt-2 mb-2">
        <div class="card-body">
          <p>{{name}}</p>
            <p>{{text}}</p>
            <input type="button" class="btn btn-primary" value="Edit message" onclick="location.href='{{id}}?messageid={{id}}'">
